<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>Sharklab.Email</PackageId>
		<Version>1.0.3</Version>
		<Authors>Jacob Sharkey</Authors>
		<Company>Sharklab</Company>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/yourname/Sharklab.Email</RepositoryUrl>
		<Description>Simple SES email wrapper for .NET with HTML templating</Description>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>


	<ItemGroup>
    <PackageReference Include="AWSSDK.SimpleEmail" Version="4.0.0.2" />
    <PackageReference Include="Mimekit" Version="4.12.0" />
	<None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
